# ----------------------------
# | T3v Blueprint Base Setup |
# ----------------------------

# === Plugin Configuration ===

plugin {
  tx_t3vbluprint {
    persistence {
      enableAutomaticCacheClearing = {$plugin.tx_t3vbluprint.persistence.enableAutomaticCacheClearing}
      storagePid = {$plugin.tx_t3vbluprint.persistence.storagePid}
      updateReferenceIndex = {$plugin.tx_t3vbluprint.persistence.updateReferenceIndex}
    }

    resources {
      rootPath = {$plugin.tx_t3vbluprint.resources.rootPath}

      private {
        rootPath = {$plugin.tx_t3vbluprint.resources.private.rootPath}
      }

      public {
        rootPath = {$plugin.tx_t3vbluprint.resources.public.rootPath}
      }
    }

    settings {
      extbase {
        controllerExtensionName = {$plugin.tx_t3vbluprint.settings.extbase.controllerExtensionName}
      }
    }

    view {
      layoutRootPath = {$plugin.tx_t3vbluprint.view.layoutRootPath}

      # Defines several paths for layouts, which will be tried in reversed order (the paths are searched from bottom to top).
      # The first folder where the desired layout is found, is used. If the array keys are numeric, they are first sorted and then tried in
      # reversed order.
      layoutRootPaths {
        0 = {$plugin.tx_t3vbluprint.view.layoutRootPath}
      }

      templateRootPath = {$plugin.tx_t3vbluprint.view.templateRootPath}

      # Defines several paths for templates, which will be tried in reversed order (the paths are searched from bottom to top).
      # The first folder where the desired template is found, is used. If the array keys are numeric, they are first sorted and then tried
      # in reversed order.
      templateRootPaths {
        0 = {$plugin.tx_t3vbluprint.view.templateRootPath}
      }

      partialRootPath = {$plugin.tx_t3vbluprint.view.partialRootPath}

      # Defines several paths for partials, which will be tried in reversed order (the paths are searched from bottom to top).
      # The first folder where the desired partial is found, is used. If the array keys are numeric, they are first sorted and then tried in
      # reversed order.
      partialRootPaths {
        0 = {$plugin.tx_t3vbluprint.view.partialRootPath}
      }
    }
  }
}

# === T3v Generator ===
